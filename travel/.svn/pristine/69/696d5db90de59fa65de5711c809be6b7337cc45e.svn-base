.travel {
    display: flex;
    background: #f5f3f5;
    flex-flow: column;
}
.travelHeader {
    height: 6rem;
    overflow: hidden;
    position: relative;
}
.backImg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
}
.headerCont {
    position: absolute;
    top: 20px;
    left: 0.75rem;
    right: 0.75rem;
    bottom: 0;
    z-index: 5;
}
.headerSearch {
    justify-content: flex-start;
    overflow: hidden;
    box-sizing: border-box;
}
.headerSearch > span {
    color: #fff;
    height: 1.4rem;
    line-height: 1.4rem;
    font-size: 0.8rem;
    padding: 0;
}
.headerSearch .search {
    box-shadow: 1px 1px 1px #696969;
}
.headerSearch .searchCity {
    text-shadow: 1px 1px 1px #696969;
}
.headerSearch span.search {
    color: #999;
    font-size: 0.7rem;
    border-radius: 5px;
    background: #FFFFFF;
}
.headerSearch span i {
    color: #f74368;
    font-size: 0.6rem;
    margin-left: 0.5rem;
}
.headerRegion {
    width: 4.5rem;
    color: #fff;
    padding-top: 10px;
    overflow: hidden;
    align-items: center;
}
.headerRegion span {
    font-size: 1.2rem;
    text-shadow: 1px 1px 1px #696969;
}
.headerRegion i {
    float: right;
    width: 0.8rem;
    height: 0.8rem;
    line-height: .8rem;
    color: #ccc;
    background: #fff;
    text-align: center;
    font-weight: 900;
    border-radius: 0.6rem;
}
.headerRegion i::before {
    font-size: 0.5rem;
    vertical-align: text-bottom;
}
.headerTab {
    background: #fff;
    padding: 0.5rem 0.75rem 0.2rem 0.75rem;
    margin-bottom: 10px;
}
.headerTab .tabItem {
    width: 50%;
    text-align: center;
    color: #666666;
    font-size: 0.8rem;
    border-bottom: 2px solid #fff;
    padding-bottom: 0.1rem;
}
.headerTab li.active {
    color: #f5525a;
    border-color: #f5525a;
}
.headerTab .wth {
    white-space: nowrap;
    margin-right: 20px;
}


















.selectShiftNum > div > div{
    width: 50%;
    height: 100%;
}
.switchingArea {
    overflow: hidden;
    padding-top: 1rem;
}
.switchTitle {
    padding: 0.5rem;
    overflow: hidden;
}
.switchTitle i {
    float: left;
    width: 20%;
    padding: 5px 20px;
    overflow: hidden;
}
.switchTitle span {
    float: left;
    width: 60%;
    text-align: center;
    font-size: 0.8rem;
    font-weight: 600;
}
.switchingCont {
    height: 28rem;
    display: flex;
    padding: 2.5rem 0;
}
.switchingCont .swiper-wrapper {
    align-items: center;
}
.switchingSlide {
    width: 75%;
    display: flex;
    flex-direction: column;
    text-align: center;
    background: #fff;
    border-radius: 5px;
    box-shadow: 0 1px 15px  #999999;;
    overflow: hidden;
}
.switchingSlide i {
    height: 50%;
    width: 100%;
    background: firebrick;
}
.switchingSlide div {
    display: flex;
    flex-direction: column;
}
.switchingSlide div b {
    font-size: 0.8rem;
    font-weight: 600;
    padding-top: 0.75rem;
}
.switchingSlide div small {
    font-size: 0.6rem;
    color: #5095da;
}
.switchingSlide div div {
    text-align: left;
    font-size: 0.6rem;
    padding: 0 1rem;
    margin: 0.5rem 0;
    overflow-y: auto;
}
.switchingCont .swiper-slide-prev, .switchingCont .swiper-slide-next {
    height: 86%;
    background: #cccccc;
    box-shadow: none;
}

/*全部景点*/
.allScenic {
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    background: #fff;
    z-index: 300;
}
.allScenic-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 2.5rem;
    padding: 0 1.5rem;
    border-bottom: 0.05rem solid #ddd;
}
.allScenic-top div {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 1rem;
    height: 1rem;
}
.allScenic-top span {
    font-size: 0.7rem;
    font-weight: bold;
    color: #252635;
}
.allScenic-top i {
    width: 1rem;
    height: 1rem;
    /*background: blue;*/
}
/*筛选*/
.condition {
    font-size: 0.6rem;
    width: 100%;
    position: relative;
    padding: 0.5rem 0;
    border-bottom: 0.05rem solid #ddd;
    padding-top: 0.5rem;
}
.condition > ul {
    display: flex;
    justify-content: space-around;
}
.condition > ul > li {
    padding: 0 0.6rem;
    font-size: 0.6rem;
    color: #5E5E5E;
}
.condition > ul > li:nth-of-type(1):active,.condition > ul > li:nth-of-type(3):active {
    color: red;
}
.condition > ul > li:nth-of-type(1):active > i,.condition > ul > li:nth-of-type(3):active > i {
    transform: rotate(180deg);
}
.condition > ul > li.onRotate {
    color: red;
}
.condition > ul > li > i.onRotate {
    transform: rotate(180deg);
}
.condition > ul > li:last-of-type {
    border-right: none;
}
.condition > ul > li > i {
    display: inline-block;
    width: 0.5rem;
    height: 0.5rem;
    color: #c5c5c5;
    margin-left: 0.3rem;
    /*color: red;*/
}
.entire {
    position: absolute;
    top: 1.85rem;
    letf: 0;
    width: 100%;
    height: 9.45rem;
    overflow-x: hidden;
    overflow-y: scroll;
    background: #FFFFFF;
    z-index: 200;
    border-top: 0.03rem solid #ddd;
}
.entire::-webkit-scrollbar {
    display: none;
}
.entire > span {
    display: block;
    position: relative;
    /*width: 3rem;*/
    padding: 0.5rem 0.5rem 0.5rem 1rem;
    border-bottom: 0.05rem solid #ddd;
    font-size: 0.6rem;
}
.condition > div.conditionPlate {
    display: flex;
    width: 100%;
    position: absolute;
    top: 1.85rem;
    background: #FFFFFF;
    z-index: 200;
    border-top: 0.03rem solid #ddd;
}
.condition > .conditionPlate > ul {
    width: 100%;
    height: 9.25rem;
    background: #F7F5F9;
    overflow-x: hidden;
    overflow-y: scroll;
    background: #FFFFFF;
}
.condition > .conditionPlate > ul::-webkit-scrollbar {
    display: none;
}
.condition > div > ul > li {
    padding: 0.5rem 1rem;
    border-bottom: 0.05rem solid #ddd;
}
.condition > div > ul.conditionRight > li {
    background: #F7F5F9;
}
ul.conditionRight > li i {
    margin-left: 0.5rem;
    display: none;

}
.condition > div > ul > li.focus {
    background: #F7F5F9;
    color: red;
}
.condition > p {
    position: absolute;
    background: #000;
    top: 1.85rem;
    z-index: 10;
    width: 100%;
    height: 33.4rem;
    opacity: 0.5;
}
/*主题下拉框*/
.filtratePlate {
    width: 100%;
    padding-top: 1rem;
    position: absolute;
    top: 1.85rem;
    background: #FFFFFF;
    z-index: 20;
    border-top: 0.03rem solid #ddd;
}
.filtratePlate.hightOn {
    top: 12rem;
}
.filtratePlate > p {
    margin-left: 0.5rem;
    font-size: 0.8rem;
    margin-bottom: 0.5rem;
}
.filtratePlate > .filtrateType {
    width: 100%;
    display: flex;
    /*justify-content: space-between;*/
    /*align-content: flex-start;*/
    flex-wrap: wrap;
    margin: 0 0.5rem;
}
.filtratePlate > .filtrateType > .typePress {
    color: red;
}
.filtratePlate > .filtrateType span {
    display: inline-block;
    position: relative;
    width: 5rem;
    padding: 0.2rem 0;
    margin-right: 1em;
    margin-bottom: 1rem;
    text-align: center;
}
.filtratePlate > .filtrateType span:nth-of-type(3n) {
    margin-right: 0;
}
.filtratePlate > .filtrateType span.dianji::before {
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 5rem;
    height: 1.7rem;
    border: 0.05rem solid #FE3F48;
    content: "";
}
.filtratePlate > .clearAffirm {
    display: flex;
    width: 100%;
    border-top: 0.05rem solid #ddd;
    border-bottom: 0.05rem solid #ddd;
}
.filtratePlate > .clearAffirm > span {
    display: inline-block;
    width: 50%;
    padding: 0.5rem 0;
    text-align: center;
}
.filtratePlate > .clearAffirm > span:nth-of-type(2) {
    background: red;
    color: #FFFFFF;
}
/*排序下拉框*/
.priceSales {
    width: 100%;
    position: absolute;
    top: 1.65rem;
    background: #FFFFFF;
    z-index: 20;
    border-top: 0.03rem solid #ddd;
}

/*主题筛选*/
.theme {
    overflow-x: scroll;
    overflow-y: hidden;
    padding: 0.5rem 0;
    border-bottom: 0.05rem solid #ddd;
}
.theme::-webkit-scrollbar {
    display: none;
}
.theme > ul > .themeon {
    background: #FE3F48;
    color: #ffffff;
}
.theme ul {
    display: flex;
    width: 9999rem;
}
.theme ul li {
    padding: 0.15rem 1rem;
    margin-left: 0.3rem;
    font-size: 0.6rem;
    background: #ddd;
}
/*景点列表*/
.scenicList {
    position: relative;
    width: 100%;
    display: flex;
    justify-content: center;
    padding:0.5rem;
    border-bottom: 0.05rem solid #ddd;
}
.scenicList .scenicImg {
    position: relative;
    width: 6rem;
    height: 4.5rem;
}
.scenicList .scenicImg > img {
    display: block;
    width: 100%;
}
.scenicImg div.lozd {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #ffffff;
}
.scenicImg div img  {
    display: inline-block;
    width: 1rem;
    height: 1rem;
}
.scenicList .scenicText {
    display: inline-block;
    vertical-align: top;
    width: 12rem;
    min-height: 4.5rem;
    margin-left: 0.5rem;
}
.scenicName {
    position: relative;
    margin-bottom: 0.3rem;
    font-size: 0.8rem;
    color: #2F2F2F;
}
.scenicName > i {
    float: right;
    padding: 0.1rem 0.3rem;
    border-radius: 25% 0;
    font-size: 0.6rem;
    background: #FE3F48;
    color: #fff;
}
@media screen and (max-width: 320px) {
    .scenicName > i{
        font-size: .9rem;
    }
}
.grade {
    margin-bottom: 0.3rem;
    /*font-weight: bold;*/
    font-size: 0.6rem;
    color: #2F2F2F;

}
.scenicText >  h4 {
    font-size: 0.7rem;
    color: #000000;
}
.scenicText > .grade {

}
.scenicText > div {
    margin-bottom: 0.2rem;
}
.scenicText > .siteName {
    color: #817F81;
}
.scenicText > div > span {
    margin-right: 0.2rem;
    padding: 0.05rem 0.3rem;
    font-size: 0.5rem;
    /*border: 0.05rem solid #FE3F48;*/
    /*color: #FE3F48*/
}
.scenicText > div > span:nth-of-type(2n) {
    border: 0.05rem solid #5db5fc;
    color: #5db5fc;
}
.scenicText > div > span:nth-of-type(2n-1) {
    border: 0.05rem solid #ff4d36;
    color: #ff4d36;
}
.siteName {
    position: relative;
    line-height: 0.9rem;
    font-size: 0.6rem;
}
.siteName > span {
    float: right;
    font-weight: bold;
    font-size: 0.9rem;
    color: #FF6E00;
}
@media screen and (max-width: 320px) {
    .siteName > span{
        font-size: .8rem;
    }
}
.siteName > span > i {
    font-weight: bold;
    font-size: 60%;
    font-style:normal;
    color: #FF6E00;
}
.textIntroduce {
    font-size: 0.6rem;
    padding-top: 0.3rem;
    margin-top: 0.3rem;
    border-top: 0.05rem dashed #ddd;
}
.textIntroduce span {
    font-weight: bold;
    color: #2F2F2F;
}
.textIntroduce p {
    display: inline-block;
}

/*点击选中*/
.CheckedBtn {
    color: red;
    background: #ddd;
}
.typeOnClass {
    position: relative;
    color: red;
}
.typeOnClass::before{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 1px solid red;
    content: "";
}
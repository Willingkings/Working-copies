/* pages/mine/myOrder/myOrder.wxss */
#myOrderBox {
  box-sizing: border-box;
  position: relative;
  width: 100%;
  height: 100%;
  padding: 5% 5%;
  font-size: 0.8rem;
  font-family: PingFang-SC-Medium;
  background: #FAFAFA;
  color: rgba(100,100,100,1);
}
.myOrderList {
  display: flex;
  justify-content: space-between; 
  font-family: PingFang-SC-Bold;
  margin-bottom: 1rem;
}
.sele {
  position: relative;
  color:rgba(254,74,84,1);
}
.sele::after {
  position: absolute;
  bottom: -0.1rem;
  left: 0;
  width: 100%;
  height: 0.06rem;
  background: rgba(254,74,84,1);
  content: "";
}
.myOrderContent {
}
.myOrderContent > view {
  position: relative;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 5% 0 5% 5%;
  margin-bottom:3%;
  border-radius: 5%;
  background: #FFFFFF;
}
.myOrderContent > view > view {
  display: inline-block;
}
.myOrderContent > view > view:nth-of-type(1) {
  vertical-align: top;
  width: 75%;
  border-right:0.05rem dashed #EFEEF4;
}
.myOrderContent > view > view:nth-of-type(1) > view {
  display: flex;
  margin-bottom: 0.5rem;
}
.myOrderContent > view > view:nth-of-type(1) > view > view:nth-of-type(1) {
  margin-right: 8%;
}
.myOrderContent > view > view:nth-of-type(2) {
  position: absolute;
  right: 4%;
  display: flex;
  align-items: center;
  color: #FE4A54;
}
.myOrderContent > view > view:nth-of-type(2) > view:nth-of-type(1) {
}
.myOrderContent > view > view:nth-of-type(2) > view:nth-of-type(2) {
  margin-left: 0.3rem;
  font-size: 1.2rem;
}
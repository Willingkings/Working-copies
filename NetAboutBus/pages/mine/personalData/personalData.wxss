/* pages/mine/personalData/personalData.wxss */
#personalDataBox {
  position: relative;
  width: 100%;
  height: 100%;
  background: #FAFAFA;
  font-size: 0.9rem;
}
.personalDataList {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #FFFFFF;
}
.personalDataList > view {
  position: relative;
  box-sizing: border-box;
  width: 97%;
  border-bottom:0.05rem solid rgba(213,213,213,1);
  padding: 4% 0 4% 3%;
}
.personalDataList > view:nth-last-child(1) {
  border-bottom: none;
}
.personalDataList > view > view {
  display: inline-block;
}
.personalDataList > view > view:nth-of-type(1) {
  width: 90%;
  display: flex;
  justify-content: space-between;
}
.personalDataList > view > view:nth-of-type(2) {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 0;
  top: 0;
  width: 10%;
  height: 100%;
  font-size: 0.8rem;
}
.quit {
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  bottom: 40%;
  width: 7rem;
  padding: 0.8rem 1rem;
  background:rgba(254,74,84,1);
  border-radius: 2rem;
  text-align: center;
  color: #FFFFFF;
}
/* pages/login/login.wxss */
#loginBox {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
  font-size: 0.9rem;
  background: #FAFAFA;
}
#loginBox > image {
  width: 5rem;
  height: 5rem;
  margin-top: 2rem;
  margin-bottom: 2rem;
}
#loginBox > .write {
  width: 100%;
  border-top: 0.05rem solid #EEEEEE;
  background: #FFFFFF;
}
#loginBox > .write > .phone, #loginBox > .write > .code {
  display: flex;
  align-items: center;
  position: relative;
  width: 100%;
  padding:1rem 1rem;
  border-bottom: 0.05rem solid #EEEEEE;
}
#loginBox > .write > .phone > view:nth-of-type(1), #loginBox > .write > .code > view:nth-of-type(1) {
  margin-right: 10%;
}
.deletePhone {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 4rem;
  top: 0;
  bottom: 0;
  margin: auto 0;
  width: 2rem;
  height: 2rem;
  z-index: 20;
}
.deletePhone > view {
  width: 1rem;
  height: 1rem;
  border: 0.05rem solid #FE4147;
  border-radius: 50%;
  font-size: 0.7rem;
  text-align: center;
  color: #FE4147;
}
.codeBtn {
  position: absolute;
  right: 3.5rem;
  display: block;
  min-width: 4rem;
  border: 0.05rem solid #FE4147;
  padding: 0 0.2rem;
  border-radius: 0.5rem;
  font-size: 0.6rem;
  text-align: center;
  background: #fff;
  color: #FE4147;
}
.hint {
  padding: 0.2rem 0.5rem;
  font-size: 0.6rem;
  color: #989898;
}
.loginBtn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90%;
  padding: 0.5rem 0.5rem;
  margin-top: 1rem;
  border-radius: 0.2rem;
  font-size: 0.9rem;
  background: #FE4147;
  color: #fff;
}
/* pages/common/calendar/calendar.wxss */
.calendar {
  height: 100%;
  overflow: hidden;
}
.title-month {
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.title-month text {
  font-size: 1.125rem ;
  font-weight:bold;
  color:#333333;
}
.title-month image {
  width: 1.5rem;
  height: 1.5rem;
  background: #E1E1E1;
  padding: 6px 8px;
  border-radius: 50%;
  margin-left: 1rem;
  box-sizing: border-box;
}
.lastMonth {
  margin-right: 1rem;
  transform: rotate(180deg);
}
.title-weeks {
  display: flex;
  justify-content: space-evenly;
  padding: 1rem 0 0.625rem ;
  border-bottom: 1px solid #EBEBEB;
}
.title-weeks text {
  width: 14.5%;
  text-align: center;
  font-size: 0.865rem;
  font-weight: bold;
}
.title-weeks text:first-child , .title-weeks text:last-child  {
  color: #ED4B4D;
}
.content-date {
  overflow: hidden;
}
.week-list {
  display: flex;
  justify-content: space-around;
  padding-bottom: 20rpx;
}
.week-item {
  display: flex;
  flex-direction: column;
  width: 2.25rem;
  height: 2.25rem;
  text-align: center;
  font-size: 1rem;
  border-radius: 50%;
  box-sizing: border-box;
}
.week-item_day {
  color: #333333;
  line-height: 0.865rem; 
  margin-top: 0.375rem;
}
.week-item_ticket{
  color: #B2B2B2;
  font-size: 60%;
}
.week-list view.active {
  color: #ffffff;
  background: #FE4A54;
}
.week-list view.active view {
  color: #ffffff;
}
.shortcuts {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding: 0 2.5rem;
}
.shortcuts view {
  width: 15%;
  color: #7D7D7D;
  font-size: 0.865rem;
  text-align: center;
  padding: 20rpx 2rem;
  border: 2px solid #7D7D7D;
  border-radius: 1.5rem;
  margin-bottom: 30rpx;
  position: relative;
}
.shortcuts view image {
  display: none;
  position: absolute;
  right: -2px;
  bottom: -2px;
  width: 1.25rem;
  height: 1.15rem;
}
.shortcuts view.active {
  color: #EB595A;
  border: 2px solid #EB595A;
}
.shortcuts view.active image {
  display: block;
}
.buyTicket {
  text-align: center;
  font-weight:bold;
  color:rgba(255,255,255,1);
  background:rgba(254,74,84,1);
  padding: 0.5rem 0;
  border-radius: 2rem;
  margin: 36rpx 2rem;
}


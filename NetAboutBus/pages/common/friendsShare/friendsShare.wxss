/* pages/common/friendsShare/friendsShare.wxss */
.friendsShare {
  height: 100%;
  background: #F9F9F9;
  position: relative;
}
.map {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 80%;
}
.lineCont {
  position: absolute;
  top: 0;
  width: 100%;
  padding: 1rem 0.75rem;
  box-sizing: border-box;
}
.details {
  background: #fff;
  padding: 1rem 0.75rem;
  border-radius: 10px;
  
}
.friendInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 0.625rem;
  border-bottom: 1px solid #ECECEC;
}
.friendInfo cover-image {
  width: 2rem;
  height: 2rem;
  border-radius: 50%;
}
.friendInfo cover-view {
  font-size: 0.875rem;
  color:#FE4A54;
}
.title {
  font-size: 0.875rem;
  padding: 0.625rem 0;
  border-bottom: 1px solid #ECECEC;
}
.lineList {
  position: relative;
  padding: 0.75em 0;
}
.viaPoint-item {
  display: flex;
  justify-content: space-between;
}
.viaPoint-item_name {
  height: 1.25rem;
  line-height: 1.25rem;
  color: #313131;
  font-size: 0.865rem;
  padding-left: 1.5rem;
  padding-bottom: 0.5rem;
  position: relative;
}
.viaPoint-item_img {
  position: absolute;
  top: 0;
  left: 0;
  width: 1.25rem;
  height: 1.25rem;
  z-index: 99;
}
.viaPoint-item_point {
  position: absolute;
  top: 0.365rem;
  left: 0.25rem;
  width: 0.5rem;
  height: 0.5rem;
  background: #fff;
  border: 2px solid #49BC71;
  border-radius: 100%;
  z-index: 99;
}
.viaPoint-item_line {
  position: absolute;
  content: "";
  top: 0;
  left: 0.5rem;
  height: 100%;
  border: 2px solid #F9F2F3;
  z-index: 9;
}
.viaPoint-item:last-child .viaPoint-item_line {
  border: none;
}
.viaPoint-item_time {
  height: 1.25rem;
  line-height: 1.25rem;
  font-size: 0.75rem;
  color: #898989;
}
.lineList-close {
  position: absolute;
  top: 1rem;
  right: 1rem;
  color: #898989;
  font-size: 0.75rem;
  display: flex;
}
.lineList-close cover-image {
  width: 0.875rem;
  height: 0.875rem;
  margin-right: 5px;
}
.instructions {
  display: flex;
  justify-content: space-between;
  font-size: 0.875rem
}
.apply {
  color: #fff;
  background: #FE4A54;
  text-align: center;
  height: 2rem;
  line-height: 2rem;
  border-radius: 2rem;
  margin-top: 1.5rem;
}
/* pages/check-in/orderContent/refundTicket/refundTicket.wxss */
#refundTicketBox {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 3rem 2rem;
  font-size: 0.9rem;
  background: #FAFAFA;
}
.refundTicketList {

}
.refundTicketList > view {
  display: flex;
  margin-bottom: 5%;
}
.refundTicketList > view > view:nth-of-type(1) {
  margin-right: 10%;
}
.refundTicketList > view > view:nth-of-type(2) {
}
.closeBtn {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50%;
}
.closeBtn > view:nth-of-type(1) {
  padding: 0.8rem 4.5rem;
  border-radius: 2rem;
  margin-bottom: 1rem;
  background: #FE4A54;
  color:#FFFFFF;
}
.closeBtn > view:nth-of-type(2) {
  font-size: 0.8rem;
  color: #333333;
}
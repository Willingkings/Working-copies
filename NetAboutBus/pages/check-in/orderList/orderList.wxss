/* pages/check-in/orderList/orderList.wxss */
/* 验票类型选择模块 */
#orderListBox {
  width: 100%;
  height: 100%;
  font-size: 0.9rem;
  background: #FAFAFA;
}
#orderListBox > .seleTicketType {
  box-sizing:  border-box;
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding:0 3rem;
}
#orderListBox > .seleTicketType > view {
  position: relative;
  padding: 1rem 0;
  color: #808080;
}
#orderListBox > .seleTicketType > view.sele {
  color: #FE4A54;
}
#orderListBox > .seleTicketType > view.sele::after {
  position: absolute;
  left: 0; 
  right: 0;
  margin: 0 auto;
  bottom: 0.5rem;
  width: 0.3rem;
  height: 0.3rem;
  border-radius: 50%; 
  background: #FE4A54;
  content: "";
}
#ListBox {
  height: 90%;
  overflow: hidden;
}
/* 未使用列表模块 */
.ListBox {
  box-sizing: border-box;
  width: 100%;
  padding: 0 1rem; 
}
.ListBox > view {
  box-sizing: border-box;
  display: flex;
  width: 100%;
  padding: 0.5rem 1rem;
  margin-bottom: 0.5rem;
  border-radius: 1rem;
  background: #FFFFFF;
}
.ListBox > view > .ListLeft {
  width: 70%;
}
.ListLeft > view:nth-of-type(1) {
  font-weight: bold;
  margin-bottom: 0.5rem;
}
.ListLeft > view:nth-of-type(2) {
  display: flex;
}
.ListLeft > view:nth-of-type(2) > view:nth-of-type(1)  {
  display: flex;
  width: 1rem;
  height: 3rem;
  margin-right: 0.4rem;
  justify-content: center;
  align-items: center;
}
.ListLeft > view:nth-of-type(2) > view:nth-of-type(1) > view {
  position: relative;
  width: 0.2rem;
  height: 2.4rem;
  background: #F9F2F3;
}
.ListLeft > view:nth-of-type(2) > view:nth-of-type(1) > view::after {
  position: absolute;
  top: 0;
  left: -0.2rem;
  margin: 0 auto;
  width: 0.3rem;
  height: 0.3rem;
  border: 0.2rem solid #49BC71;
  border-radius: 50%;
  background: #FFFFFF;
  content: "";
}
.ListLeft > view:nth-of-type(2) > view:nth-of-type(1) > view::before {
  position: absolute;
  bottom: 0;
  left: -0.2rem;
  margin: 0 auto;
  width: 0.3rem;
  height: 0.3rem;
  border: 0.2rem solid #DD5754;
  border-radius: 50%;
  background: #FFFFFF;
  content: "";
}
.ListLeft > view:nth-of-type(2) > view:nth-of-type(2) > view:nth-of-type(1) {
  display: inline-block;
}
.ListLeft > view:nth-of-type(2) > view:nth-of-type(2) > view:nth-of-type(2) {
  display: inline-block;
  padding-left: 0.4rem;
  font-size: .8rem;
  color: #898989;
}
.ListLeft > view:nth-of-type(2) > view:nth-of-type(2) > view:nth-of-type(3) {
  margin-top: 0.6rem;
}
.ListLeft > view:nth-of-type(3) {
  margin-top: 0.3rem;
  font-size: 0.6rem;
  color: #AAAAAA;
}
.ListBox > view > .ListRight {
  position: relative;
  width: 30%;
  border-left: 0.17rem dotted #F8F7FA;
}
.ListBox > view > .ListRight > .time {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  height: 100%;
}
.ListBox > view > .ListRight > .time > view:nth-of-type(1) {
  display: block;
  position: relative;
  font-size: 0.7rem;
  color: #6A6A6A;
}
.ListBox > view > .ListRight > .time > view:nth-of-type(2) {
  width: 3.5rem;
  height: .2rem;
  border-radius: 1rem;
}
.ListBox > view > .ListRight > .time > view.nonPayment:nth-of-type(2) {
  background: #FE4A54;
}
.ListBox > view > .ListRight > .time > view.unused:nth-of-type(2) {
  background: #5CC64D;
}
.ListBox > view > .ListRight > .time > view.employ:nth-of-type(2) {
  background: #818181;
}
.ListBox > view > .ListRight > .time > view.refund:nth-of-type(2) {
  background: #818181;
}
.ListBox > view > .ListRight > .time > view:nth-of-type(3) {
  font-size: 0.8rem;
}
.ListBox > view > .ListRight > .time > view:nth-of-type(4) {
  padding: 0.1rem 0.5rem;
  border-radius: 0.2rem;
  font-size: 0.7rem;
  color: #FFFFFF;
}
.ListBox > view > .ListRight > .time > view.nonPayment:nth-of-type(4) {
  background: #FE4A54;
}
.ListBox > view > .ListRight > .time > view.unused:nth-of-type(4) {
  background: #5CC64D;
}
.ListBox > view > .ListRight > .time > view.employ:nth-of-type(4) {
  background: #818181;
}
.ListBox > view > .ListRight > .time > view.refund:nth-of-type(4) {
  background: #818181;
}
.ListBox > view > .ListRight > view:nth-of-type(2) {
  position: absolute;
  bottom: -16%;
  left: -7%;
  width: 0.8rem;
  height: 0.8rem;
  border-radius: 50%;
  background: #FAFAFA;
}
/* 数据为空模块 */
.empty {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 70%;
}
.empty > view >  image{
  width: 8rem;
  height: 8rem;
}
.empty > view >  view{
  text-align:center;
  color: #ddd;
}


.tabBar {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: #FFFFFF;
}
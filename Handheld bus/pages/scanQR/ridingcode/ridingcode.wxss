/* pages/ridingcode/ridingcode.wxss */
image {
  width: 100%;
  height: 100%;
}
.mianBody {
  height: 100%;
  background: #FE4A53;
  position: relative;
}
.mainContent {
  position: absolute;
  top: 10%;
  left: 30rpx;
  right: 30rpx;
  bottom: 30%;
  background: #fff;
  border-radius: 20rpx;
}
.undefind {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.undefind view {
  width: 72%;
  height: 64%;
  padding: 50rpx 0;
  box-sizing: border-box;
}
.undefind text {
  width: 72%;
  color: #FF656B;
  text-align: center;
  padding: 10rpx 0;
  border: 1px solid #FF656B;
  border-radius: 40rpx;
  box-sizing: border-box;
}
.codeShow {
  width: 480rpx;
  padding-top: 40rpx;
  margin: auto;
}
.codeImg {
  width: 440rpx;
  height: 440rpx;
  margin: auto;
}
.codeText {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}
.codeText text {
  color: #EB4852;
}
.payment {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  font-size: 28rpx;
  background: #F2F2F2;
  padding: 30rpx;
}
.mask-panel {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0,0,0,.3);
}
.close {
  position: absolute;
  top: 15%;
  right: 10%;
  width: 42rpx;
  height: 48rpx;
  z-index: 9;
}
.mask-mian {
  position: absolute;
  top: 15%;
  left: 10%;
  right: 10%;
  bottom: 35%;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx;
  border-radius: 20rpx;
}
.mask-title {
  font-size: 36rpx;
  font-weight: 600;
}
.mask-describe {
  font-size: .875rem;
  text-align: left;
  line-height: 1rem;
  color: #8B8F92;
}
.mask-img {
  width: 60%;
  height: 3rem;
}
.bound {
  width: 380rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background: #FF4F58;
  padding: 8rpx 0;
  border-radius: 100rpx;
}
.recharge {
  width: 380rpx;
  text-align: center;
  font-size: 32rpx;
  color: #FF4F58;
  padding: 8rpx 0;
  border: 1px solid #FF4F58;
  border-radius: 100rpx;
}
.paySelect {
  position: absolute;
  right: 0;
  bottom: 10%;
  left: 0;
  display: flex;
  justify-content: space-around;
}
.payOption {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.payOption image {
  width: 136rpx;
  height: 136rpx;
}
.payOption text {
  font-size: 32rpx;
  color: #fff;
  padding-top: 10rpx; 
}
/* pages/scanQR/paymentQR/paymentQR.wxss */
image {
  width: 100%;
  height: 100%;
}
.mainTop {
  display: flex;
  justify-content: center;
  padding: 36rpx 0;
}
.mainTop text {
  font-size: 30rpx;
  color: #fff;
}
.mainTop view {
  width: 68rpx;
}
.mianBody {
  height: 100%;
  background: #FE4A53;
  position: relative;
}
.mainContent {
  position: absolute;
  top: 10%;
  left: 30rpx;
  right: 30rpx;
  bottom: 30%;
  background: #fff;
  border-radius: 20rpx;
}
.undefind {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.undefind view {
  width: 85%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.undefind view image{
  height: 300rpx;
  width: 600rpx;
}
.undefind view view{
  font-size: 60rpx;
  font-weight: 500;
}
.undefind view text{
  font-size: 28rpx;
}
.undefind>text {
  width: 72%;
  color: #fff;
  background: #FF656B;
  text-align: center;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.codeShow {
  width: 480rpx;
  height: 560rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-top: 40rpx;
  margin: auto;
}
.codeImg {
  width: 440rpx;
  height: 440rpx;
  margin: 0 auto;
}
.codeText {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}
.codeText text {
  color: #EB4852;
}
.payment {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  font-size: 28rpx;
  background: #F2F2F2;
  padding: 30rpx;
}
.mask-panel {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0,0,0,.3);
}
.close {
  position: absolute;
  top: 15%;
  right: 10%;
  width: 42rpx;
  height: 48rpx;
  z-index: 9;
}
.mask-mian {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  padding: 20rpx 60rpx;
  box-sizing: border-box;
}
.mask-mian view {
  width: 100%;
}
.logo {
  width: 60%;
  height: 3rem;
}
.mask-title {
  font-size: 40rpx;
  font-weight: 500;
}
.mask-describe {
  font-size: .875rem;
  text-align: left;
  line-height: 1rem;
  color: #8B8F92;
}
.mask-mian view.mask-img {
  width: 60%;
  height: 3rem;
  margin: 0 auto;
}
.bound {
  width: 380rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background: #FF4F58;
  padding: 8rpx 0;
  border-radius: 10rpx;
}
.recharge {
  width: 380rpx;
  text-align: center;
  font-size: 32rpx;
  color: #FF4F58;
  padding: 8rpx 0;
  border: 1px solid #FF4F58;
  border-radius: 100rpx;
}
.paySelect {
  position: absolute;
  right: 0;
  bottom: 10%;
  left: 0;
  display: flex;
  justify-content: space-around;
}
.payOption {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.payOption image {
  width: 136rpx;
  height: 136rpx;
}
.payOption text {
  font-size: 32rpx;
  color: #fff;
  padding-top: 10rpx; 
}
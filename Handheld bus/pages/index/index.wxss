/**index.wxss**/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
page {
  height: 100%;
  position: relative;
}
#indexBox {
  width: 100%;
  height: 100%;
  background: #FAFAFA;
}
/*************** 上半部 ***************/
#indexTop {
  background: #FFFFFF;
  padding: 33rpx 21rpx 27rpx 19rpx;
}
#indexTop .site {
  display: flex;
  align-items: center;
  padding-left: 23rpx;
  padding-bottom: 26rpx;
  font-size: 48rpx;
  font-weight: bold;
  font-family: PingFang-SC-Bold;
  color: #333333;
}
#indexTop .site > image {
  width: 19rpx;
  height: 14rpx;
  margin-left: 14rpx;
  color: #333333;
}
#indexTop .search {
  display: flex;
  align-items: center;
  height: 78rpx;
  padding-left: 35rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 40rpx;
  background: #FAFAFA;
}
#indexTop .search > view:nth-of-type(1) {
  position: relative;
  width: 32rpx;
  height: 32rpx;
}
#indexTop .search > view:nth-of-type(1) >image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
#indexTop .search > view:nth-of-type(2) {
  padding-left: 25rpx;
  font-size:28rpx;
  font-family: PingFang-SC-Medium;
  color:#AAAAAA;
}
/**************** 中部 ****************/
#nearby {
  padding: 27rpx 58rpx 16rpx 56rpx;
  font-weight: 500;
  background: #FFFFFF;
}
.nearbyTop {
  display: flex;
  justify-content: space-between;
  font-family: PingFang-SC-Medium;
}
.nearbyTop > view:nth-of-type(1) {
  margin-bottom: 36rpx;
  font-size: 28rpx;
  color: #333333;
}
.nearbyTop > view:nth-of-type(2) {
  display: flex;
  align-items: center;
}
.nearbyTop > view:nth-of-type(2) > view:nth-of-type(1) {
  position: relative;
  width: 26rpx;
  height: 26rpx;
  margin-right: 11rpx;
  margin-bottom:36rpx;
}
.nearbyTop > view:nth-of-type(2) > view:nth-of-type(1) > image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.nearbyTop > view:nth-of-type(2) > view:nth-of-type(2) {
  font-size: 26rpx;
  margin-bottom:36rpx;
  color: #EB595A;
}
.nearbyBottom {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  color: #333333;
}
/*************** 下半部 ***************/
#indexBottom {
  
}
#ListBox {
  box-sizing:border-box;
  height: 100%;
  padding: 0 21rpx 0 19rpx;
}
.blank {
  height: 28rpx;
}
.ListBox {
  display: flex;
  justify-content: space-between;
  margin-bottom: 28rpx;
  padding: 19rpx 35rpx 36rpx 37rpx;
  background:rgba(255,255,255,1);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  /* box-shadow: 0rpx 0rpx 16rpx 0rpx rgba(27,27,27,0.2); */
  border-radius: 35rpx;
}
.ListLeft {
  width: 50%;
}
.ListLeft .title {
  margin-bottom: 27rpx;
}
.ListLeft .title > view:nth-of-type(1) {
  display: inline-block;
  vertical-align:bottom;
  font-size: 40rpx;
  line-height: 45rpx;
  font-family: PingFang-SC-Medium;
  font-weight: Bold;
  color: #000000;
}
.ListLeft .title > view:nth-of-type(2) {
  display: inline-block;
  vertical-align:bottom;
  margin-left: 5rpx;
  font-size: 35rpx;
  font-family: PingFang-SC-Medium;
  font-weight: Bold;
  color: #000000;
}
.ListLeft .title > view:nth-of-type(3) {
  display: inline-block;
  vertical-align:bottom;
  border: 2rpx solid rgba(255,138,139,1);
  border-radius: 10rpx;
  padding: 5rpx 12rpx 5rpx 12rpx;
  margin-left: 20rpx;
  background:rgba(254,209,209,1);
  font-weight: Bold;
  font-size: 24rpx;
  color: #FF8A8B;
}
.ListLeft .title > view:nth-of-type(3) > view:nth-of-type(1) {
  display: inline-block;
  font-size: 24rpx;
  font-family: PingFang-SC-Bold;
}
.ListLeft .title > view:nth-of-type(3) > view:nth-of-type(2) {
  display: inline-block;
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
}
.ListLeft .station {
  display: flex;
  font-size: 27rpx;
  font-family: PingFang-SC-Medium;
  justify-items: flex-start;
}
.ListLeft .station > view:nth-of-type(1) {
  color: #666666;
}
.ListLeft .station > view:nth-of-type(2) {
  width: 70%;
  margin-left: 15rpx;
  color: #000000;
}
.ListLeft .start {
  margin-bottom: 17rpx;
}
.ListLeft .finish {
  
}

.ListRight {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 50%;
}
.ListRight > view {
}
.ListRight .now {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
  font-family: PingFang-SC-Medium;
  color: #EB595A;
}
.ListRight .now > view >  view:nth-of-type(1) {
  display: inline-block;
  font-size: 69rpx;
}
.ListRight .now > view > view:nth-of-type(2) {
  display: inline-block;
  font-size: 28rpx;
  margin-left: 5rpx;
}
.ListRight .future {
  font-size: 26rpx;
  font-weight: bold;
  color: #EB595A;
  text-align:right;
}
.ListBottom {
  width: 100%;
  height: 100rpx;
}
.DataNone {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 88rpx 0;
}
.DataNone > view {
  display: flex;
}
.DataNone > view > view:nth-of-type(1) {
  width: 43rpx;
  height: 43rpx;
  margin-right: 19rpx;
  background: red;
}
.DataNone > view > view:nth-of-type(2) {
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  color: #333333;
}
/***********************************************/
#tab {
  position: absolute;
  bottom: 0;
  display: flex;
  width: 100%;
  padding: 12rpx 0 15rpx;
  background:rgba(255,255,255,1);
  box-shadow:-1rpx -5rpx 9rpx 0rpx rgba(27,27,27,0.2);
}
#tab > view {
  display: flex;
  flex-grow: 1;
  justify-content: center;
  align-items: center;
}
#tab > view > view {
  display: flex;
  flex-direction: column;
  align-items: center;
}
#tab > view > view > view:nth-of-type(1) {
  position: relative;
  width: 36rpx;
  height: 36rpx;
}
#tab > view > view > view:nth-of-type(1) > image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
#tab > view > view > view:nth-of-type(2) {
  padding-top: 6rpx;
  font-family:  PingFang-SC-Medium;
  font-size: 20rpx;
  color: #909090;
  z-index:10;
}
#tab > view:nth-of-type(1) > view > view:nth-of-type(2) {
  padding-top: 6rpx;
  font-family:  PingFang-SC-Medium;
  font-size: 20rpx;
  /* color: #909090; */
  color: #EB595A;
  z-index:10;
}


#tab > view:nth-of-type(2) {
  position: relative;
}
#tab > view:nth-of-type(2) > view {
  position: absolute;
  bottom: 0;
  z-index: 10;
}
#tab > view:nth-of-type(2) > view > view:nth-of-type(1) {
  display: flex;
  justify-content: center;
  position: relative;
  width: 111rpx;
  height: 57rpx;
  z-index: 10;
}
#tab > view:nth-of-type(2) > view > view:nth-of-type(1) > image {
  position: relative;
  width: 57rpx;
  height: 57rpx;
}
#tab > view:nth-of-type(2) > view > view:nth-of-type(3) {
  position: absolute;
  width: 107rpx;
  height: 107rpx;
  top: -26rpx;
  border-radius: 50%;
  background: #FFFFFF;
  z-index: 1;
  box-shadow: 0rpx -10rpx 9rpx -2rpx rgba(27,27,27,0.2);
}
.loading {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.loading > image {
  width: 422rpx;
  height: 141rpx;
  margin-bottom: 230rpx;
}
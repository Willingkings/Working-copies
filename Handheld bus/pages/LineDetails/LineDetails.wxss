#tab {
  position: absolute;
  bottom: 0;
  display: flex;
  width: 100%;
  padding: 12rpx 0 15rpx;
}
#tab > view {
  display: flex;
  flex-grow: 1;
  justify-content: center;
  align-items: center;
}
#tab > view > view {
  display: flex;
  flex-direction: column;
  align-items: center;
}
#tab > view > view > view:nth-of-type(1) {
  position: relative;
  width: 36rpx;
  height: 36rpx;
}
#tab > view > view > view:nth-of-type(1) > image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
#tab > view > view > view:nth-of-type(2) {
  padding-top: 6rpx;
  font-family:  PingFang-SC-Medium;
  font-size: 20rpx;
  color: #909090;
}
#tab > .bj {
  position: absolute;
  top: -150rpx;
  width: 100%;
  height: 150rpx;
}
#tab > .bj > image {
  width: 100%;
  height: 100%;
}

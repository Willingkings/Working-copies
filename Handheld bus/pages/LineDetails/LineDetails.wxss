/* pages/LineDetails/LineDetails.wxss */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
page {
  height: 100%;
  position: relative;
}
#LineDetailsBox {
  width: 100%;
  height: 100%;
  background: #FAFAFA;
}
/** * * * * * *  信息 * * * * * * * **/
#details {
  padding: 23rpx 0 22rpx 0;
  font-family: PingFang-SC-Medium;
  background: #FFFFFF;
}
#details .detailsTop {
  display: flex;
  align-items: center;
  padding-left: 31rpx;
  font-size: 36rpx;
  color: #333333;
}
#details .detailsTop > view:nth-of-type(2) {
  position: relative;
  width: 13px;
  height: 8px;
  margin: 0 27rpx;
}
#details .detailsTop > view:nth-of-type(2) > image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
#details .detailsBottom {
  display: flex;
  margin-top: 26rpx;
  padding-left: 28rpx;
  font-size: 24rpx;
}
#details .detailsBottom > view:nth-of-type(1) {
  margin-right: 23rpx;
}
#details .detailsBottom > view:nth-of-type(2) {
  margin-right: 34rpx;
}
#details .detailsBottom > view:nth-of-type(1),#details .detailsBottom > view:nth-of-type(2) {
  color: #5D5D5D;
}
#details .detailsBottom > view:nth-of-type(3) {
  color: #FF5057;
}
/** * * * * * *  速度 * * * * * * * **/
#speed {
  padding: 25rpx 0 0 21rpx;
  font-family: PingFang-SC-Medium;
}
#speed .speedTitle {
  display: flex;
  justify-content: center;
  padding-top: 18rpx;
  background: #FFFFFF;
}
#speed .speedTitle > view {
  display: flex;
  font-size: 28rpx;
  color: #333333;
}
#speed .speedTitle > view > view {
  padding: 0 13rpx 0 12rpx;
  color: #FF5057;
}
#speed .speedList {
  display: flex;
  padding: 20rpx 0 52rpx 0;
  border-radius: 10rpx;
  background: #FFFFFF;
}
#speed .speedList > view {
  flex-grow: 1;
  height: 82rpx;
  text-align: center;
  border-right: 1rpx solid rgba(218,218,218,1);
}
#speed .speedList > view:nth-of-type(3) {
  border-right: none;
}
#speed .speedList > view > view:nth-of-type(1) {
  font-size: 38rpx;
  color: #333333;
}
#speed .speedList > view > view:nth-of-type(2) {
  font-size: 24rpx;
  color:#8E8E8E;
}
#speed .speedList > view > view:nth-of-type(1).arrive {
  color: #FF5057;
}
#speed .speedList > view > view:nth-of-type(2).arrive {
  color:#FF5057;
}
.speedList > .without {
  display: flex;
  justify-content: center;
  align-items: center;
}
.speedList > .without > view {
  color: #7E9CF2 !important; 
}

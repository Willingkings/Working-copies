  height: 15rpx;
}
.List > view.userSelect > view:nth-of-type(3) > view {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 16rpx;
  height: 15rpx;
}
.List > view.Sle > view:nth-of-type(3) > view {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: -4rpx;

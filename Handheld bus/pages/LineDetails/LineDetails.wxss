}
.List > view.userSelect.Sle > view:nth-of-type(2) {
  color: #D81E06;
}
.locationSelect {
  position: absolute;
  top: 26rpx;
  width: 31rpx;
  height: 38rpx;
  z-index: 20;
}
.locationSelect > image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.busIcon {
  position: absolute;
  bottom: 20rpx;
  width: 43rpx;
  height: 23rpx;
  z-index: 10;
}
.busIcon > image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.busIcon1 {
  position: absolute;

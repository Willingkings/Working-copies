  text-align: center;
  font-family: PingFang-SC-Medium;
}
.List > view.userSelect:nth-last-of-type(1) {
  margin-right: 0rpx;
}
.List > view.userSelect > view:nth-of-type(1) {
  margin-top: 11rpx;
  font-size: 24rpx;
  color: #8E8E8E;
}
.List > view.userSelect > view:nth-of-type(2) {
  margin-top: 21rpx;
  font-size: 32rpx;
  white-space: normal;
    -webkit-writing-mode: vertical-rl;      
    writing-mode: vertical-rl;
  color: #333333;
}
.List > view.userSelect > view:nth-of-type(3) {

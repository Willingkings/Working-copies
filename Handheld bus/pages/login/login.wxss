/* pages/login/login.wxss */
#loginBox {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
  font-family: PingFang-SC-Medium;
  background: #FAFAFA;
}
#loginBox > image {
  width: 128rpx;
  height: 128rpx;
  margin-top: 87rpx;
  margin-bottom: 46rpx;
}
#loginBox > .write {
  width: 100%;
  border-top: 2rpx solid #EEEEEE;
  background: #FFFFFF;
}
#loginBox > .write > .phone, #loginBox > .write > .code {
  display: flex;
  align-items: center;
  position: relative;
  width: 100%;
  padding: 30rpx 0 26rpx 32rpx;
  border-bottom: 2rpx solid #EEEEEE;
}
#loginBox > .write > .phone > view:nth-of-type(1), #loginBox > .write > .code > view:nth-of-type(1) {
  margin-right: 92rpx;
  font-size: 33rpx;
  color: #000000;
}

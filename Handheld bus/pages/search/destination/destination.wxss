/* pages/search/destination/destination.wxss */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
page {
  height: 100%;
  position: relative;
}
#destinationBox {
  width: 100%;
  height: 100%;
  background: #FAFAFA;
}
/*************** 上半部 ***************/
#indexTop {
  background: #FFFFFF;
  padding: 33rpx 21rpx 27rpx 19rpx;
}
#indexTop .search {
  display: flex;
  align-items: center;
  height: 78rpx;
  padding-left: 35rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 40rpx;
  background: #FAFAFA;
}
#indexTop .search > view {
  padding-left: 25rpx;
  font-size:28rpx;
  font-family: PingFang-SC-Medium;
  color:#AAAAAA;
}
#indexTop .fixation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 78rpx;
  padding-left: 35rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.fixation > view:nth-of-type(1) {
  display: flex;
  font-family: PingFang-SC-Medium;
  font-size: 28rpx;
}
.fixation > view:nth-of-type(1) > view:nth-of-type(1) {
  color: #666666,
}
.fixation > view:nth-of-type(1) > view:nth-of-type(2) {
  color: #EB595A;
}
.fixation > view:nth-of-type(2) {
  width: 91rpx;
  height: 42rpx;
  border-radius: 21rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 42rpx;
  background:rgba(235,89,90,1);
  color: #FFFFFF;
}
/*************** 下半部 ***************/
#indexBottom {
  
}
#ListBox {
  box-sizing:border-box;
  height: 100%;
  padding: 0 21rpx 0 19rpx;
}
.blank {
  height: 28rpx;
}
.ListBox {
  display: flex;
  justify-content: space-between;
  margin-bottom: 28rpx;
  padding: 19rpx 35rpx 36rpx 37rpx;
  background:rgba(255,255,255,1);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  /* box-shadow: 0rpx 0rpx 16rpx 0rpx rgba(27,27,27,0.2); */
  border-radius: 35rpx;
}
.ListLeft {
  width: 60%;
}
.ListLeft .title {
  margin-bottom: 27rpx;
}
.ListLeft .title > view:nth-of-type(1) {
  display: inline-block;
  vertical-align:bottom;
  font-size: 40rpx;
  line-height: 45rpx;
  font-family: PingFang-SC-Medium;
  font-weight: Bold;
  color: #000000;
}
.ListLeft .title > view:nth-of-type(2) {
  display: inline-block;
  vertical-align:bottom;
  margin-left: 5rpx;
  font-size: 35rpx;
  font-family: PingFang-SC-Medium;
  font-weight: Bold;
  color: #000000;
}
.ListLeft .title > view:nth-of-type(3) {
  display: inline-block;
  vertical-align:bottom;
  border: 2rpx solid rgba(255,138,139,1);
  border-radius: 10rpx;
  padding: 5rpx 12rpx 5rpx 12rpx;
  margin-left: 20rpx;
  background:rgba(254,209,209,1);
  font-weight: Bold;
  font-size: 24rpx;
  color: #FF8A8B;
}
.ListLeft .title > view:nth-of-type(3) > view:nth-of-type(1) {
  display: inline-block;
  font-size: 24rpx;
  font-family: PingFang-SC-Bold;
}
.ListLeft .title > view:nth-of-type(3) > view:nth-of-type(2) {
  display: inline-block;
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
}
.ListLeft .station {
  display: flex;
  font-size: 27rpx;
  font-family: PingFang-SC-Medium;
  justify-items: flex-start;
}
.ListLeft .station > view:nth-of-type(1) {
  color: #666666;
}
.ListLeft .station > view:nth-of-type(2) {
  width: 70%;
  margin-left: 15rpx;
  color: #000000;
}
.ListLeft .start {
  margin-bottom: 17rpx;
}
.ListLeft .finish {
  
}

.ListRight {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 40%;
}
.ListRight > view {
}
.ListRight .now {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
  font-family: PingFang-SC-Medium;
  color: #EB595A;
}
.ListRight .now > view >  view:nth-of-type(1) {
  display: inline-block;
  font-size: 69rpx;
}
.ListRight .now > view > view:nth-of-type(2) {
  display: inline-block;
  font-size: 28rpx;
  margin-left: 5rpx;
}
.ListRight .future {
  font-size: 26rpx;
  font-weight: bold;
  color: #EB595A;
}

.DataNone {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 88rpx 0;
}
.DataNone > view {
  display: flex;
}
.DataNone > view > view:nth-of-type(1) {
  width: 43rpx;
  height: 43rpx;
  margin-right: 19rpx;
  background: red;
}
.DataNone > view > view:nth-of-type(2) {
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  color: #333333;
}
.loading {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.loading > image {
  width: 422rpx;
  height: 141rpx;
  margin-bottom: 230rpx;
}
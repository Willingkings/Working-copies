/* pages/search/origin/origin.wxss */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
page {
  height: 100%;
  position: relative;
}
#originBox {
  width: 100%;
  height: 100%;
  background: #FAFAFA;
}
/*************** 上半部 ***************/
#indexTop {
  background: #FFFFFF;
  padding: 33rpx 21rpx 27rpx 19rpx;
}
#indexTop .site {
  padding-left: 23rpx;
  padding-bottom: 26rpx;
  font-size: 48rpx;
  font-weight: bold;
  font-family: PingFang-SC-Bold;
  color: #333333;
}
#indexTop .search {
  display: flex;
  align-items: center;
  height: 78rpx;
  padding-left: 35rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 40rpx;
  background: #FAFAFA;
}
#indexTop .search > view:nth-of-type(1) {
  width: 32rpx;
  height: 32rpx;
  /* background: red; */
}
#indexTop .search > view:nth-of-type(2) {
  padding-left: 25rpx;
  font-size:28rpx;
  font-family: PingFang-SC-Medium;
  color:#AAAAAA;
}
/*************** 提示 ***************/
#hint {
  padding: 0 184rpx 0 177rpx;
  font-family: PingFang-SC-Medium;
  color: #A9A9A9;
}
#hint > .hintTop {
  text-align: center;
  font-size: 36rpx;
  margin-bottom: 57rpx;
  margin-top: 16rpx;
}
#hint > .hintBottom {
  display: flex;
  justify-content: space-between;
}
#hint > .hintBottom > view {
}
#hint > .hintBottom > view > view:nth-of-type(1) {
  width: 47rpx;
  height: 50rpx;
  margin-bottom: 32rpx;
}
#hint > .hintBottom > view > view:nth-of-type(1) > image {
  width: 100%;
  height: 100%;
}
#hint > .hintBottom > view > view:nth-of-type(2) {
  font-size: 24rpx;
}
#hint > .hintBottom {
  
}
/*************** 列表 ***************/
#ListBox {
  box-sizing:border-box;
  height: 100%;
  background: #FFFFFF;
}
.title {
  padding: 20rpx 0 20rpx 55rpx;
  font-size: 28rpx;
  background:rgba(227,227,227,1);
  color: #333333;
}
.Listpadding {
  padding-left: 52rpx;
}
.List {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 2rpx solid rgba(220,220,220,1);
}
.List:nth-last-of-type(1) {
  border-bottom: none;
}
.List > view:nth-of-type(1) {
  width: 42rpx;
  height: 42rpx;
  margin-right: 33rpx;
}
.List > view:nth-of-type(1) > image {
  width: 100%;
  height: 100%;
}
.List > view:nth-of-type(2) {
  font-size: 28rpx;
  color: #333333;
}
/*************** 没有数据 ***************/
#ListDataNull {
  display: flex;
  padding: 88rpx 153rpx;
}
#ListDataNull > view:nth-of-type(1) {
  position: relative;
  width: 43rpx;
  height: 43rpx;
  margin-right: 19rpx;
}
#ListDataNull > view:nth-of-type(1) > image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
#ListDataNull > view:nth-of-type(2) {
  font-family: PingFang-SC-Medium;
  font-size: 32rpx;
  color: #333333;
}